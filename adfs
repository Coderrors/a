year = int(input('Напишите, на сколько лет рассчитывать уровень цен и совокупного выпуска: '))
Pe = float(input('Напишите, каков был уровень цен в предыдущем периоде:'))
i = 0
while i != (year - 1):
    P = (Pe + 100) / 2
    print(P)
    Y = 1500 - 5 * P
    print(Y)
    pi = (P / Pe)- 1 
    Pe = Pe * (1 + pi)
    i += 1
